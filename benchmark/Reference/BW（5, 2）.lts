const N = 5
const K = 2

const Teams  = N
const Steps  = K

range Team   = 0..(Teams-1)
range Step   = 1..Steps

Team(ID=0) = Arrival,
  Arrival = (
  ã€€arriveDocument -> Pending[1] ),
  Pending[s:Step] = (
    assign[ID] -> Assigned[s] ),
  Assigned[s:Step] = (
    when(s <  Steps) reject[ID][s] -> Pending[s+1] |
	when(s == Steps) reject[ID][s] -> Judge |
    accept[ID] -> Judge ),
  Judge = (
	refuse  -> Arrival |
    approve -> Arrival ).

